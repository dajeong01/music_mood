<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.music_backend.domain.spotify.userGenre.UserGenreMapper">

    <delete id="deleteUserGenres">
        DELETE FROM user_genre_tb WHERE user_id = #{userId}
    </delete>

    <insert id="insertUserGenre">
        INSERT INTO user_genre_tb (user_id, genre_id)
        VALUES (#{userId}, #{genreId})
    </insert>


    <select id="findGenreIdsByUserId" resultType="java.lang.Integer">
        SELECT genre_id
        FROM user_genre_tb
        WHERE user_id = #{userId}
    </select>

</mapper>